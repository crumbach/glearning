<mvc:View 
  xmlns:core="sap.ui.core" 
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:l="sap.ui.layout" 
  xmlns:me="sap.me"
  xmlns:u="sap.ui.unified"
  xmlns="sap.m" 
  controllerName="sap.ui.demo.logbook.view.newTrip">
    <Page class="sapUiFioriObjectPage" 
          title="{i18n>newTripTitle}"
          showNavButton="true"
          navButtonPress="onNavBack">
        <l:Grid defaultSpan="L12 M12 S12" width="auto" hSpacing="2" class="gridMarginTop">
            <l:content>
                <u:Calendar id="calendar" 
                    select="calendarSelect" 
                    intervalSelection="false" 
                    singleSelection="false"/>
                <List   id="selectedDatesList"
                        class="labelMarginLeft"
                        noDataText="No Dates Selected"
                        headerText="Selected Dates"
                        items="{/selectedDates}">
                    <StandardListItem title="{datum}"/>
                </List>
            </l:content>
        </l:Grid>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button text="Save" type="Emphasized" press="onSave"/>
                <Button text="Cancel" press="onCancel"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>
