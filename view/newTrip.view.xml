<mvc:View 
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:l="sap.ui.layout" 
  xmlns:u="sap.ui.unified"
  xmlns="sap.m" 
  class="viewPadding"
  controllerName="sap.ui.demo.logbook.view.newTrip">
    <Page title="{i18n>newTripTitle}"
          showNavButton="true"
          navButtonPress="onNavBack">
		<content>
            <FlexBox xmlns="sap.m"
            	id="id"
            	visible="true"
            	direction="Column"
            	justifyContent="SpaceBetween"
            	alignItems="Center">
        		<tooltip></tooltip> <!-- sap.ui.core.TooltipBase -->
        		<dependents></dependents> <!-- sap.ui.core.Control, since 1.19 -->
        		<items>
                    <u:Calendar id="calendar" 
                                select="calendarSelect" 
                                intervalSelection="false" 
                                singleSelection="false"/>
                    <List   id="selectedDatesList"
                            class="labelMarginLeft"
                            noDataText="No Dates Selected"
                            headerText="Selected Dates"
                            items="{/selectedDates}">
                        <StandardListItem title="{datum}"/>
                    </List>
        		</items> <!-- sap.ui.core.Control -->
            </FlexBox>
        </content> <!-- sap.ui.core.Control -->
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button text="Save" type="Emphasized" press="onSave"/>
                <Button text="Cancel" press="onCancel"/>
            </Toolbar>
        </footer>
    </Page>
</mvc:View>